@{
    ViewData["Title"] = "Login and Registration";
}

@model User
<body class="container-fluid" style="background-color: #f5f5f5">
    <div class="text-center"> 
        <h1>Placeholder</h1>
        <form class="form-signin" asp-action="Register" asp-controller="Home" method="POST">
            <span asp-validation-for="first_name" style="color:red;"></span>
            <br>
            <label  asp-for="first_name"></label>
            <input  asp-for="first_name" type="text" style="padding: 5px; border-radius: 5px">
            
            <br>
            <span asp-validation-for="last_name" style="color:red;"></span>
            <br>
            <label  asp-for="last_name"></label>
            <input  asp-for="last_name" type="text" style="padding: 5px; border-radius: 5px">
            
            <br>
            <span asp-validation-for="email" style="color:red;"></span>
            <p style="color:red">@TempData["EmailRegistered"]</p>
            <br>
            <label  asp-for="email"></label>
            <input  asp-for="email" type="text" style="padding: 5px; border-radius: 5px">

            <br>
            <span asp-validation-for="password" style="color:red;"></span>
            <br>
            <label  asp-for="password"></label>
            <input  asp-for="password" type="password" style="padding: 5px; border-radius: 5px">
            
            <br>
            <span asp-validation-for="confirm" style="color:red;"></span>
            <br>
            <label asp-for="confirm"></label>
            <input asp-for="confirm" type="password" style="padding: 5px; border-radius: 5px">
            
            <br>
            <button class="btn btn-lg btn-primary" style="margin:20px" type="submit">Register</button>
        </form>
    </div>


    <div class="text-center" style="padding: 5px; margin:5px;"> 
        <form class="form-signin" asp-action="Login" asp-controller="Home" method="POST">
            <p style="color:red">@TempData["Error"]</p>
            <br>
            <label  asp-for="email"></label>
            <input  asp-for="email" type="text" style="padding: 5px; border-radius: 5px">
            
            <br>
            <span asp-validation-for="password" style="color:red;"></span>
            <p style="color:red"></p>@TempData["Error"]</p>
            <br>
            <label  asp-for="password"></label>
            <input  asp-for="password" type="password" style="padding: 5px; border-radius: 5px">
            
            <br>
            <button class="btn btn-lg btn-primary" style="margin:20px" type="submit">Login</button>
        </form>
    </div>
</body>